<tmpl id="main">
	<div class="driver_content">
		<textarea id="{{tinymceId}}" name="content">{{content}}</textarea>
	</div>
	<div class="driver_abstract">
		<select class="driver_abstract_enable" name="abstract_type">
			<option value="auto" selected>`Auto-Generate Abstract`</option>
			<option value="manual">`Use Manual Abstract`</option>
		</select>
		<textarea class="driver_abstract_manual" name="abstract_manual" placeholder="`Abstract...`">{{abstract}}</textarea>
	</div>
</tmpl>